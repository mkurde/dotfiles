; editorconfig.org

root = true

[*]
charset                     = utf-8
end_of_line                 = lf
indent_size                 = 4
indent_style                = space
insert_final_newline        = true
max_line_length             = 120
tab_width                   = 4
trim_trailing_whitespace    = true

[dotgit*]
indent_size              = 2
indent_style             = space

[*.md]
trim_trailing_whitespace    = false

[{*.md,*.neon,*.yaml,*.yml,*.tf,[Jj]ustfile,*.json,*.zsh,*.sh,*.bash,*.txt,.zsh_*}]
indent_size                 = 2
indent_style                = space

[*.go]
indent_size                 = 2
indent_style                = tab
